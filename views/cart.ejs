<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://fonts.googleapis.com/css?family=Darker+Grotesque&display=swap" rel="stylesheet">

        <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
        <title>BikeShop - Shop</title>
    </head>

    <body>

        <div class="container-fluid">

            <!-- HEADER -->
            <div class="row">
  
                <nav class=" header col-12 navbar navbar-light bg-dark">
                        <a class="navbar" href="/">
                        <img src="/images/bike-logo.svg" width="50" height="50" class="logo" alt="">
                        The Bike Shop Experience
                        </a>
                </nav>
  
            </div>  
            <div class="row ariane">
                <nav aria-label="breadcrumb" class="col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Basket</li>
                    </ol>
                </nav>
            </div>


            <h1>Basket</h1>

            <div class="row">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Picture</th>
                        <th scope="col">Model</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Total</th>
                        <th scope="col">Suppr</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% 

                        var totalPanier = 0;
                        for(var i=0;i<articleCde.length;i++){
                        %>
                            <tr class="basket-item">
                                <th scope="row"><%=i%></th>
                                <td><img src=<%= articleCde[i].urlImage %> class="basket-img"></td>
                                <td>
                                    <%= articleCde[i].name %>
                                </td>
                                <td>
                                    <form action="/update-cart" method="POST">
                                        <input type="hidden" name="position" value="<%=i%>">
                                        <input type="text" name="qteProduit" value="<%= articleCde[i].qteProduit%>">
                                        <button type="submit" class="btn btn-outline-info btn-sm" name="button"><i class="fas fa-sync-alt"></i></button>
                                    </form>
                                </td>
                                <td><%= articleCde[i].price %>€</td>
                                <td><%= articleCde[i].price * articleCde[i].qteProduit %>€</td>
                                <td><a href="/delete-cart?position=<%=i%>"><button class="btn btn-outline-info btn-sm" name="button"><i class="far fa-trash-alt"></i></button></a></td>
                            </tr>
                        <%
                            totalPanier += articleCde[i].price * articleCde[i].qteProduit;
                            
                        }
                        %>
                        

                      <tr>
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="total-box">Total Basket : </td>
                        <td><%= totalPanier %>€</td>
                        <td></td>
                      </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-12 text-right">
                  
                    <a href="/save-commande" class="btn btn-outline-info btn-sm btn-checkout">  Checkout</a>
                   
                </div>
            </div>
                
        </div>
        
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    </body>
</html>